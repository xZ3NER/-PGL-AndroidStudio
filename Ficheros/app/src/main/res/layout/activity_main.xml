<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/fechaEditT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:hint="@string/date_et_hint"
        android:inputType="date"
        android:paddingTop="20dp"
        android:shadowColor="#000000"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="#009688"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/datosEditT"
        android:layout_width="match_parent"
        android:layout_height="476dp"
        android:ems="10"
        android:fontFamily="@font/roboto_light"
        android:gravity="start|top"
        android:hint="@string/datos_et_hint"
        android:inputType="textMultiLine|textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#009688"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/grabarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#009688"
            android:fontFamily="@font/roboto_light"
            android:text="@string/grabar_button"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/recuperarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#009688"
            android:fontFamily="@font/roboto_light"
            android:text="@string/recuperar_button"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>