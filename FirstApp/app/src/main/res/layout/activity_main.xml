<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextUserInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:backgroundTint="#32A8BC"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Write something!"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextInitialPos"
        android:layout_width="164dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#32A8BC"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Initial position"
        android:inputType="number"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReverse" />

    <EditText
        android:id="@+id/editTextLastPos"
        android:layout_width="164dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#32A8BC"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="Final position"
        android:inputType="number"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editTextInitialPos"
        app:layout_constraintTop_toBottomOf="@+id/textViewReversed" />

    <TextView
        android:id="@+id/textViewReversed"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_thin"
        android:shadowColor="#797676"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonReverse"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserInput" />

    <TextView
        android:id="@+id/textViewSubString"
        android:layout_width="185dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_thin"
        android:shadowColor="#797676"
        android:shadowDx="4"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonReverse"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastPos" />

    <Button
        android:id="@+id/buttonReverse"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#8EBCE1"
        android:fontFamily="@font/roboto_medium"
        android:text="Reverse text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserInput" />

    <Button
        android:id="@+id/buttonSubString"
        android:layout_width="143dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#8EBCE1"
        android:fontFamily="@font/roboto_medium"
        android:text="EXTRACT SUBSTRING"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInitialPos" />

</androidx.constraintlayout.widget.ConstraintLayout>